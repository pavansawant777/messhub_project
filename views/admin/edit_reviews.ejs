<%-include('navbar.ejs')%>

<form action="/admin/update_reviews" method="post" enctype="multipart/form-data">
    <div class="container bg-light fw-bold shadow">
        <div class="row">
            <input type="hidden" name="review_id" value="<%=reviews.review_id%>">
            <div class="col-md-12">
                <h3 class="heading mb-3">Customer Reviews</h3>
            </div>
            <div class="col-md-6 p-1">
                <label>Customer Reviewers Name</label>
                <input type="text" name="reviewer_name" class="form-control" value="<%=reviews.reviewer_name%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Customer Review Description</label>
                <input type="text" name="review_desc" class="form-control" value="<%=reviews.review_desc%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Customer Reviewers Image</label>
                <input type="file" name="reviewer_img" class="form-control" required value="<%=reviews.reviewer_img%>">
            </div>
            <div class="col-md-6 p-1">
                <img src="/uploads/home/<%=reviews.reviewer_img%>" style="width: 100px; height: 100px;">
            </div>
        </div>
        <div class="col-md-12 mt-2 mb-2 text-center">
            <button class="btn text-white bg-primary p-2 mt-2 mb-2">Update Review</button>
        </div>
    </div>
</form>

<%-include('footer.ejs')%>