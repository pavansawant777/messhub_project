<%-include('navbar.ejs')%>

<form action="/admin/save_slider" method="post" enctype="multipart/form-data">
    <div class="container bg-light fw-bold shadow">
        <div class="row">
            <input type="hidden" name="slider_id" value="<%=slider.slider_id%>">
            <div class="col-md-12">
                <h3 class="heading mb-3">Manage Slider</h3>
            </div>
            <div class="col-md-6 p-1">
                <label>Slider Title</label>
                <input type="text" name="slider_title" class="form-control" value="<%=slider.slider_title%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Slider Sub Title</label>
                <input type="text" name="slider_subtitle" class="form-control" value="<%=slider.slider_subtitle%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Slider Info</label>
                <input type="text" name="slider_info" class="form-control" value="<%=slider.slider_info%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Slider Image</label>
                <input type="file" name="slider_image" class="form-control" required value="<%=slider.slider_image%>">
            </div>
            <div class="col-md-6 p-1">
                <img src="/uploads/home/<%=slider.slider_image%>" style="width: 100px; height: 100px;">
            </div>
        </div>
        <div class="col-md-12 mt-2 mb-2 text-center">
            <button class="btn text-white bg-primary p-2 mt-2 mb-2">Update Slider</button>
        </div>
    </div>
</form>


<%-include('footer.ejs')%>