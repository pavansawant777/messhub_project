<%-include('navbar.ejs')%>

<form action="/admin/home_about1" method="post" enctype="multipart/form-data">
    <div class="container bg-light fw-bold shadow">
        <div class="row">
            <input type="hidden" name="about1_id" value="<%=about1.about1_id%>">
            <div class="col-md-12">
                <h3 class="heading mb-3">Manage Our Story</h3>
            </div>
            <div class="col-md-6 p-1">
                <label>Our Story Heading</label>
                <input type="text" name="about1_heading" class="form-control" value="<%=about1.about1_heading%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Our Story Description</label>
                <input type="text" name="about1_description" class="form-control" value="<%=about1.about1_description%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Our Story Image</label>
                <input type="file" name="about1_image" class="form-control" required value="<%=about1.about1_image%>">
            </div>
            <div class="col-md-6 p-1">
                <img src="/uploads/aboutus/<%=about1.about1_image%>" style="width: 100px; height: 100px;">
            </div>
        
        </div>
        <div class="col-md-12 mt-2 mb-2 text-center">
            <button class="btn text-white bg-primary p-2 mt-2 mb-2">Update Our Story</button>
        </div>

        </div>
    </div>
</form>

<%-include('footer.ejs')%>