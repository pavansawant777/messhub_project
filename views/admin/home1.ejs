<%-include('navbar.ejs')%>

<form action="/admin/save_home1" method="post" enctype="multipart/form-data">
    <div class="container bg-light fw-bold shadow">
        <div class="row">
            <div class="col-md-12">
                <h3 class="heading mb-3">Manage Our Meal Plans</h3>
            </div>
            <div class="col-md-6 p-1">
                <label>Our Meal Plans Heading</label>
                <input type="text" name="home1_heading" class="form-control" >
            </div>
            <div class="col-md-6 p-1">
                <label>Our Meal Plans Title</label>
                <input type="text" name="home1_title" class="form-control">
            </div>
            <div class="col-md-6 p-1">
                <label>Our Meal Plans Image</label>
                <input type="file" name="home1_image" class="form-control" required >
            </div>
        
        </div>
        <div class="col-md-12 mt-2 mb-2 text-center">
            <button class="btn text-white bg-primary p-2 mt-2 mb-2">Save Our Meal Plans</button>
        </div>

        </div>
    </div>
</form>

<!-- Table -->
<div class="container bg-light fw-bold shadow mt-2 p-2">
    <div class="row p-2 pb-2">
        <div class="col-md-12 mb-2">
            <h3 class="subheading mb-2"> Meal Plan List </h3>
        </div>
        <div class="col-md-12 mb-2">
            <table class="table table-bordered table-striped shadow">
                <tr>
                    <th>ACTION</th>
                    <th>SN</th>
                    <th>Heading</th>
                    <th>Title</th>
                    <th>Image</th>
                </tr>
                <%for(var i=0;i<home1_list.length;i++){%>
                    <tr>
                        <td style="width: 3%; white-space: nowrap;">
                            <a href="/admin/edit_home1/<%=home1_list[i].home1_id%>"><button class="bg-info"><i class="fa fa-edit text-white"></i></button></a>
                            <a href="/admin/delete_home1/<%=home1_list[i].home1_id%>" onclick="return confirm('ARE YOU SURE...?')"><button class="bg-danger"><i class="fa fa-trash text-white"></i></button></a>
                        </td>
                        <td><%=i+1%></td>
                        <td><%=home1_list[i].home1_heading%></td>
                        <td><%=home1_list[i].home1_title%></td>
                        <td>
                            <img src="/uploads/home/<%=home1_list[i].home1_image%>" style="width: 100px; height: 100px;">
                        </td>
                    </tr>
                    <%}%>
            </table>
        </div>
    </div>
</div>

<%-include('footer.ejs')%>