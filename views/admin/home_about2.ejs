<%-include('navbar.ejs')%>

<form action="/admin/save_home_about2" method="post" enctype="multipart/form-data">
    <div class="container bg-light fw-bold shadow">
        <div class="row">
            <input type="hidden" name="about2_id" value="<%=about2.about2_id%>">
            <div class="col-md-12">
                <h3 class="heading mb-3">Manage Our Mission</h3>
            </div>
            <div class="col-md-6 p-1">
                <label>Our Mission Heading</label>
                <input type="text" name="about2_heading" class="form-control" value="<%=about2.about2_heading%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Our Mission Description</label>
                <input type="text" name="about2_description" class="form-control" value="<%=about2.about2_description%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Our Mission Image</label>
                <input type="file" name="about2_image" class="form-control" required value="<%=about2.about2_image%>">
            </div>
            <div class="col-md-6 p-1">
                <img src="/uploads/aboutus/<%=about2.about2_image%>" style="width: 100px; height: 100px;">
            </div>
        
        </div>
        <div class="col-md-12 mt-2 mb-2 text-center">
            <button class="btn text-white bg-primary p-2 mt-2 mb-2">Update Our Mission</button>
        </div>

        </div>
    </div>
</form>

<%-include('footer.ejs')%>