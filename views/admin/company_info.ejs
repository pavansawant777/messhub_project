<%-include('navbar.ejs')%>

<form action="/admin/save_company_info" method="post" enctype="multipart/form-data">
    <div class="container bg-light fw-bold shadow">
        <div class="row">
            <input type="hidden" name="company_id" value="<%=company_info.company_id%>">
            <div class="col-md-12">
                <h3 class="heading mb-3">Manage Company Info</h3>
            </div>
            <div class="col-md-6 p-1">
                <label>Address</label>
                <input type="text" name="address1" class="form-control" value="<%=company_info.address1%>">
                <input type="text" name="address2" class="form-control mt-2" value="<%=company_info.address2%>">
                <input type="text" name="address3" class="form-control mt-2" value="<%=company_info.address3%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Contact No.</label>
                <input type="text" name="contact" class="form-control" value="<%=company_info.contact%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Mess name</label>
                <input type="text" name="mess_name" class="form-control" value="<%=company_info.mess_name%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Mess Info</label>
                <input type="text" name="mess_info" class="form-control" value="<%=company_info.mess_info%>">
            </div>
            <div class="col-md-6 p-1">
                <label>Logo</label>
                <input type="file" name="logo" class="form-control" required value="<%=company_info.logo%>">
            </div>
            <div class="col-md-6 p-1">
                <img src="/uploads/home/<%=company_info.logo%>" style="width: 100px; height: 100px;">
            </div>
        </div>
        <div class="col-md-12 mt-2 mb-2 text-center">
            <button class="btn text-white bg-primary p-2 mt-2 mb-2">Update Company Info</button>
        </div>
    </div>
</form>

<%-include('footer.ejs')%>