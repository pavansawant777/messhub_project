<%- include("navbar.ejs") %>


    <section>
        <div class='Banner overflow-hidden col-md-12 col-sm-12 col-xs-12 col-12'
            style="background-image: url('/uploads/<%=banner_edit_info.banner_image%>'); background-repeat: no-repeat;background-size: cover;">
            <div class='container'>
                <div class='row d-flex justify-content-center'>
                    <div class='banner_heading '>
                        <h2 class="fs-2 fw-bold text-white">
                            <%=banner_edit_info.banner_heading%>
                        </h2>
                        <p class='text-white fs-6 fw-bold'>
                            <%=banner_edit_info.banner_description%>
                        </p>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item fs-6"><a class="text-decoration-none fw-bold"
                                        href="/">Home</a></li>
                                <li class="breadcrumb-item fs-6"><a class="text-decoration-none fw-bold"
                                        href="/contact">Contact Us</a></li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container mt-5">
